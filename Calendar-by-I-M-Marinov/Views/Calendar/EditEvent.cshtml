@model IEnumerable<Calendar_by_I_M_Marinov.Models.EditEventViewModel>

<h2>Edit Event</h2>

@foreach (var eventModel in Model)
{
	<div class="card mb-3">
		<div class="card-header">
			<h3>Edit Event: @eventModel.Summary</h3>
		</div>
		<div class="card-body">
			<form asp-action="EditEvents" method="get">
				<div class="form-group">
					<label for="Summary">Event Name (Summary)</label>
					<input type="text" id="Summary" name="Summary" class="form-control" value="@eventModel.Summary" />
				</div>

				<div class="form-group">
					<label for="Start">Start Time</label>
					<input type="datetime-local" id="Start" name="Start" class="form-control" value="@eventModel.Start.ToString("yyyy-MM-ddTHH:mm")" />
				</div>

				<div class="form-group">
					<label for="End">End Time</label>
					<input type="datetime-local" id="End" name="End" class="form-control" value="@eventModel.End.ToString("yyyy-MM-ddTHH:mm")" />
				</div>

				<div class="form-group">
					<label for="Location">Location</label>
					<input type="text" id="Location" name="Location" class="form-control" value="@eventModel.Location" />
				</div>

				<input type="hidden" name="EventId" value="@eventModel.EventId" />
				<input type="hidden" name="CalendarId" value="@eventModel.CalendarId" />

				<button type="submit" class="btn btn-success">Save</button>
			</form>
		</div>
	</div>
}