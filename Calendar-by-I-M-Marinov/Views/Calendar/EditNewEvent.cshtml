@model Calendar_by_I_M_Marinov.Models.EventViewModel

<h2>Edit Event</h2>

<form asp-action="EditEvent" method="post">
    <div class="form-group">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <!-- Handling All-Day Events -->
    <div class="form-group">
        <label asp-for="Start"></label>
        @if (Model.EventType == "allDay")
        {
            // <!-- For all-day events -->
            <input asp-for="Start" type="date" class="form-control" />
        }
        else
        {
            // <!-- For events with specific start time -->
            <input asp-for="Start" type="datetime-local" class="form-control" />
        }
    </div>

    <div class="form-group">
	    <label asp-for="End"></label>

        @if (Model.EventType != "allDay")
        {
            // <!-- For all-day events -->
            <input asp-for="End" type="date" class="form-control" />
        }
        else
        {
            // <!-- For events with specific end time -->
            <input asp-for="End" type="datetime-local" class="form-control" />
        }
    </div>

    <input type="hidden" asp-for="EventId" value="@Model.EventId" />
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
