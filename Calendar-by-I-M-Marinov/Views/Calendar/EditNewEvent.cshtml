@model Calendar_by_I_M_Marinov.Models.EventViewModel

<h2>Edit Event</h2>

<form asp-action="EditEvent" method="post">
    <div class="form-group">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Start"></label>
        <input asp-for="Start" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="End"></label>
        <input asp-for="End" type="datetime-local" class="form-control" />
    </div>
    <input type="hidden" asp-for="EventId" value="@ViewData["EventId"]" />
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
