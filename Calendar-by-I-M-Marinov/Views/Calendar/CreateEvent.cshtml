@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Calendar_by_I_M_Marinov.Models.EventViewModel

<h2>@ViewBag.PageTitle</h2>

<form asp-action="@ViewBag.FormAction" method="post">
	<div class="form-group">
		<label asp-for="Summary"></label>
		<input asp-for="Summary" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Location"></label>
		<input asp-for="Location" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
	</div>
	<div class="form-group">
		<label asp-for="Start"></label>
		<input asp-for="Start" type="datetime-local" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="End"></label>
		<input asp-for="End" type="datetime-local" class="form-control" />
	</div>
	@if (ViewBag.EventId != null)
	{
		<input type="hidden" name="EventId" value="@ViewBag.EventId" />
	}
	<button type="submit" class="btn btn-primary">@ViewBag.ButtonText</button>
</form>